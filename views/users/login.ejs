<div class="login-page">

    <% if (message !== 'undefined') { %>
        <%= message %>
   <%  } %> 
     
    <h1>Login Form</h1>
    <form method="post" action="/users/login">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="input-box">
            <input type="text" id="phone_number" name="username" required="required">
            <span>Phone Number</span>
        </div>
        <div class="input-box">
            <input type="password" id="password" name="password" required="required">
            <span>Password</span>
        </div>

        <button class="send" type="submit" value="Submit">Log In</button>
    </form>

</div>